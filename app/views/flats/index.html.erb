
<h2 class="m-2 p-2">All our <%=Flat.count%> flats </h2>
<div class="container d-flex flex-row gap-2 flex-wrap justify-content-center m-2 p-2">
<% @flats.each do |flat|%>
  <div class ="card col-3 d-flex justify-content-between">
    <h3 class="p-2"> <%= flat.name%> </h3>
    <p class="p-2"> <%= flat.address%> </p>
    <div class="d-flex flex-row gap-4 p-2">
      <p> <i class="fa-solid fa-people-group"></i> <%= flat.number_of_guests%> </p>
      <p> <i class="fa-solid fa-euro-sign"></i> <%= flat.price_per_night%> </p>
    </div>
      <div class="d-flex flex-row bg-white">
        <%= link_to "More info", flat_path(flat), class: "pt-2 pb-2 m-2"%>
        <%= link_to "Edit", edit_flat_path(flat), class: "pt-2 pb-2 m-2"%>
        <%= link_to "Delete", flat_path(flat), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
      </div>
  </div>
<% end %>
</div>
